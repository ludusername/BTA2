
@model BTA.Models.TransportationProviderViewModel

@{
    ViewBag.Title = "ProvidersDetails";
}





<div class="panel panel-primary">
    <div class="panel panel-heading"><h4>Provider details</h4> </div>
    <div class="panel-body">
        @using (Html.BeginForm("ProvidersShowing", "Account", FormMethod.Post, new { @class = "form" }))
        {
            @Html.HiddenFor(m => m.TransportationProviderID, Model.TransportationProviderID);
            <div class="form-group">
                @Html.LabelFor(m => m.TransportationProviderName, "Transportation provider name")
                @Html.TextBoxFor(m => m.TransportationProviderName, Model.TransportationProviderName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TransportationProviderName, null, new { @class = "text-danger" })



            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.StreetName, "Transportation provider street name")
                @Html.TextBoxFor(m => m.StreetName, Model.StreetName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.StreetName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.StreetNumber, "Transportation provider street number")
                @Html.TextBoxFor(m => m.StreetNumber, Model.StreetNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.StreetNumber, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Phone, "Transportation phone number")
                @Html.TextBoxFor(m => m.Phone, Model.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.DropDownListFor(m => m.CityID, new SelectList(Model.gradovi, "CityID", "CityName"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.CountryID, new SelectList(Model.drzave, "CountryID", "CountryName"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.TransportaitonTypeID, new SelectList(Model.tipovitransporta, "TransportaitonTypeID", "TransportaitonTypeName"), new { @class = "form-control" })
            </div>


            <input type="submit" class="btn btn-default" value="Edit provider" />


        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>