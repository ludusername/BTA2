@model BTA.Models.AccommodationModel
@{
    ViewBag.Title = "AccomodationShowing";
}

<div class="panel panel-primary">
    <div class="panel panel-heading"><h4>Provider details</h4> </div>
    <div class="panel-body">
        @using (Html.BeginForm("AccommodationShowing", "Account", FormMethod.Post, new { @class = "form" }))
        {
            @Html.HiddenFor(m => m.AccommodationID, Model.AccommodationID);
            <div class="form-group">
                @Html.LabelFor(m => m.Name, "Accomodation name")
                @Html.TextBoxFor(m => m.Name, Model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })



            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, "Address of accomodation")
                @Html.TextBoxFor(m => m.Address, Model.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, "Transportation provider street number")
                @Html.TextBoxFor(m => m.Email, Model.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Phone, "Accomodation phone number")
                @Html.TextBoxFor(m => m.Phone, Model.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.DropDownListFor(m => m.CityID, new SelectList(Model.gradovi, "CityID", "CityName"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.AccCategoryID, new SelectList(Model.tipsmestaja, "AccCategoryID", "Name"), new { @class = "form-control" })
            </div>
            


            <input type="submit" class="btn btn-default" value="Edit provider" />


        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

