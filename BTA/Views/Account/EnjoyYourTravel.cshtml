@model BTA.Models.TransportaitonModel
@using BTA.Models
@{

    ViewBag.Title = "EnjoyYourTravel";
}
<head>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="http://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>

<h2>EnjoyYourTravel</h2>
<div class="container">
    <div class="row">

        <div class="col-md-6">
            @using (Html.BeginForm("EnjoyYourTravel", "Account", FormMethod.Post, new { @class = "form form-search-city" }))
            {


                @Html.LabelFor(m => m.CityName, "City from")
                @Html.TextBoxFor(m => m.CityName, new { @class = "form-control", @id = "searchInput" })
                @Html.ValidationMessageFor(m => m.CityName)

                <div>
                    <div>

                        @Html.LabelFor(m => m.CityName1, "City to")
                        @Html.TextBoxFor(m => m.CityName1, new { @class = "form-control", @id = "searchInput1" })
                        @Html.ValidationMessageFor(m => m.CityName1)
                    </div>
                    <div>
                    <b>Type of the transportatiton:</b>@Html.DropDownList("ListaTipovaPrevoza", (IEnumerable<SelectListItem>)ViewBag.tipprevoza, new { @class = "form-control" })
                        </div>
                                                    <div class="form-group">
                                    @Html.DropDownList("listaProvajdera", (IEnumerable<SelectListItem>)ViewBag.provajderi, new { @class = "form-control" })

                                </div>

                </div>
                <input type="submit" value="Check info about transportation" class="btn btn-default confirm-btn" style="font-size:10px" />





            }
        </div>
    </div>
</div>

<script src="~/Scripts/SearchCityJS.js"></script>
<script src="~/Scripts/Searchcity1.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
